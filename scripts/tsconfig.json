{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "types": ["node", "vite/client"],
        "baseUrl": ".",
        "paths": {
            "@scripts/*": ["./*"],
            "@features/*": ["../src/features/*"],
            "@shared/*": ["../src/shared/*"],
            "@/*": ["../src/*"]
        }
    },
    "include": ["./**/*.ts"],
    "exclude": ["dist"]
}
