{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "types": ["node", "vite/client"],
        "baseUrl": ".",
        "paths": {
            "@scripts/*": ["./*"],
            "@curriculum/*": ["../src/curriculum/*"],
            "@game/*": ["../src/game/*"],
            "@languages/*": ["../src/languages/*"],
            "@srs/*": ["../src/srs/*"],
            "@ui/*": ["../src/ui/*"],
            "@utils/*": ["../src/utils/*"]
        }
    },
    "include": ["./**/*.ts"],
    "exclude": ["dist"]
}
